<body>
    <% 
   
    const books=[{bookName:'book1',author:'author1',image:'./booka.png'},
    {bookName:'book2',author:'author2',image:'./8.jpg'},
    {bookName:'book3',author:'author3',image:'./9.jpg'},
    {bookName:'book4',author:'author4',image:'./10.jpg'},
    {bookName:'book5',author:'author5',image:'./11.jpg'},
    {bookName:'book6',author:'author6',image:'./12.jpg'},
    {bookName:'book7',author:'author7',image:'./13.jpg'},
    {bookName:'book8',author:'author8',image:'./14.jpg'},
    {bookName:'book9',author:'author9',image:'./15.jpg'},
    {bookName:'book10',author:'author10',image:'./16.png'},
    {bookName:'book11',author:'author11',image:'./17.png'},
    {bookName:'book12',author:'author12',image:'./18.png'},
    ];
    %>
<table width="100%" border="0" align="center" cellpadding="0" cellspacing="0" style="font-family: 'Raleway', sans-serif;">

    <!-- START HEADER/BANNER -->
    
            <tbody><tr>
                <td align="center">
                    <table class="col-600" width="600" border="0" align="center" cellpadding="0" cellspacing="0">
                        <tbody><tr>
                            <td align="center" valign="top" background="./background.jpg" bgcolor="#66809b" style="background-size:cover; background-position:top;">
                                <table class="col-600" width="600" height="400" border="0" align="center" cellpadding="0" cellspacing="0">
    
                                    <tbody><tr>
                                        <td height="20"></td>
                                    </tr>
    
                                    <tr>
                                        <td colspan="3"align="center" style="font-family: 'Raleway', sans-serif; font-size:37px; color:#ffffff; line-height:24px; font-weight: bold; letter-spacing: 7px;">
                                                Explore Like  <span style="font-family: 'Raleway', sans-serif; font-size:37px; color:#ffffff; line-height:39px; font-weight: 300; letter-spacing: 7px;">Never Before</span>
                                        </td>
                                       
                                    </tr>
                                    
                                    <tr>
                                        <td height="100"></td>
                                    </tr>
                                    <tr>
                                        <td align="center" style="font-family: 'Lato', sans-serif; font-size:17px; color:#ffffff;word-spacing: 1px; line-height:20px; font-weight: 300;">
                                                Our best-selling new and future releases. Updated hourly. 
                                        </td>
                                    </tr>
                                    <tr><td align="center">
                                        <button style="padding:13px;border-radius:18px;background:#fff;color:#F37621; font-size:16px;font-weight:bold;border:none;">Visit Website</button>
                                    </td></tr>
                                    
                                </tbody></table>
                            </td>
                        </tr>
                    </tbody></table>
                </td>
            </tr>
    
    
    <!-- END HEADER/BANNER -->
    
    
    <!-- START 3 BOX SHOWCASE -->
    
            <tr>
                <td align="center">
                    <table class="col-600" width="600" border="0" align="center" cellpadding="0" cellspacing="0" style="margin-left:20px; margin-right:20px; border-left: 1px solid #dbd9d9; border-right: 1px solid #dbd9d9;">
                        <tbody><tr>
                            <td height="55"></td>
                        </tr>
    
                        <tr>
                            <td align="center" style="font-family: 'Raleway', sans-serif; font-size:22px; font-weight: bold; color:#2a3a4b;">Hot New Releases in Books</td>
                        </tr>
    
                        <tr>
                            <td height="10"></td>
                        </tr>
    
    
                        <tr>
                            <td align="center" style="font-family: 'Lato', sans-serif; font-size:14px; color:#757575; line-height:24px; font-weight: 300;">
                                    Shop for Bestsellers, New-releases & More. Best Prices on Millions of Titles
                            </td>
                        </tr>
                        <tr><td height="30" width="600"></td></tr>
                    </tbody></table>
                </td>
            </tr>
            
    
            <tr>
                <td align="center">
                    <table class="col-600" width="600" border="0" align="center" cellpadding="0" cellspacing="0" style="border-left: 1px solid #dbd9d9; border-right: 1px solid #dbd9d9; ">
                        <tbody><tr>
                            <td height="10"></td>
                        </tr>
                        <tr>
                            <td>
                                
                                
                                <table align="center" width="600" cellspacing="3" style="color:rgba(0,0,0,0.7);"> 
                                <% var rows=3 %>
                                <% var cols=books.length %>
                                <% var c=0 %>
                               
                                <% for( c  ; c < cols ; c++) { %>
                                   <% if( c%4 == 0) { %>
                                <tr>
                                <% } %>
                                    <td align="center" style="padding-bottom:5%;border:1px solid #ccc;">
                                       
                                        <img src="<%= books[c].image %>" height="170" width="120"/> 
                                        <table><tr><td>
                                        <%= books[c].bookName %>
                                            </td></tr>
                                            <tr>
                                        <td>
                                        <%= books[c].author %>
                                    </td></tr></table>
                                    </td>

                                    <% } %>
                                    <% if( c%4 == 0) { %>
                                    </tr>
                                    <% } %>
                                 
                                  </table>

                            </td>
                        </tr>

                        <tr>
                                <td height="5"></td>
                    </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
